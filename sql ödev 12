
SELECT count(*) AS filmsayisi
FROM film
WHERE
(
  SELECT length
  FROM film
  WHERE length > AVG(length)
);


SELECT count(*) AS rentalrate
FROM film
WHERE
(
  SELECT COUNT(MAX(rental_rate))
  FROM film
  WHERE rental_rate
);

(
Select MIN(rental_rate) from film
)
UNION
(
Select MIN(replacement_cost) from film
)
